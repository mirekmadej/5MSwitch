<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_5MSwitch.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="ustaw przełącznik" 
               />
            <Switch 
                OnColor="Orange"
                ThumbColor="Green" 
                Toggled="onSwitchToggled"
                x:Name="swToggler"
                />
            <Label
                Text="stan przełącznika: wyłączony"
                x:Name="lblStan"
                />
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
